@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width:400px;">
    <!-- Lock icon at top -->
    <div class="text-center mb-4">
        <i class="bi bi-box-arrow-in-right" style="font-size:60px; color:#0d6efd;"></i>
    </div>

    <h3 class="text-center mb-4">Login to Your Account</h3>

    <form method="post">
        <div class="mb-3">
            <label>Username</label>
            <input class="form-control" name="username" placeholder="Enter username" required />
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input class="form-control" name="password" type="password" placeholder="Enter password" required />
        </div>

        <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
            <i class="bi bi-box-arrow-in-right me-2"></i> Login
        </button>

        <div class="text-danger mt-2">@ViewBag.Message</div>
    </form>
</div>

@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand fw-bold" href="/">WebShop</a>

            <!-- Mobile toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Search Bar -->
                <form class="d-flex flex-grow-1 mx-3" method="get" action="/Home/Search">
                    <input class="form-control w-100" type="search" name="query" placeholder="Search for products, brands and more" aria-label="Search">
                    <button class="btn btn-light ms-2" type="submit">Search</button>
                </form>

                <!-- Right-side buttons -->
                <ul class="navbar-nav align-items-center">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <!-- Profile dropdown after login -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="/images/profile-placeholder.png" class="rounded-circle me-2" style="width:30px; height:30px;" />
                                @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                            </ul>
                        </li>

                        <!-- Cart button -->
                        <li class="nav-item ms-2">
                            <a class="btn btn-light d-flex align-items-center" href="/Cart" style="height:38px; padding:0 10px;">
                                <i class="bi bi-cart fs-4 me-1"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Login/Register before login -->
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light d-flex align-items-center" href="/Account/Login">
                                <i class="bi bi-person-fill me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-success d-flex align-items-center" href="/Account/Register">
                                <i class="bi bi-pencil-fill me-1"></i> Register
                            </a>
                        </li>

                        <!-- Cart button -->
                        <li class="nav-item ms-2">
                            <a class="btn btn-light d-flex align-items-center" href="/Cart" style="height:38px; padding:0 10px;">
                                <i class="bi bi-cart fs-4 me-1"></i>
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-3">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
